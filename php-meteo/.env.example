# Configuration de l'application
APP_NAME=MeteoApp
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Configuration de la base de données
DB_CONNECTION=sqlite
DB_DATABASE=meteo.db

# Configuration MQTT
MQTT_HOST=broker.hivemq.com
MQTT_PORT=1883
MQTT_CLIENT_ID=meteo_client
MQTT_TOPIC=meteo/bordeaux

# Configuration des logs
LOG_CHANNEL=file
LOG_LEVEL=debug

# Configuration de la sécurité
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configuration des intervalles et seuils
UPDATE_INTERVAL=10000
MAX_MEASUREMENTS=24
TEMP_MIN=0
TEMP_MAX=40
HUM_MIN=0
HUM_MAX=100 